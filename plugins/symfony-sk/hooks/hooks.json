{
  "description": "Hooks for Symfony StarterKit projects",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/check-project-config.sh",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/ssh-connect.sh",
            "timeout": 10
          }
        ]
      }
    ],
    "PostToolCall": [
      {
        "matcher": {
          "toolName": "Edit|Write"
        },
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/post-edit-audit.sh \"$TOOL_RESULT_FILE_PATH\"",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
