{
  "description": "Hooks for Symfony StarterKit projects",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/check-project-config.sh",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/ssh-connect.sh",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
